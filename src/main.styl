// comments

.comments
  width 100%
  height 100%
  position fixed
  top 0
  left 0
  z-index 10
  overflow-x hidden
  overflow-y auto
  

.comments-bg
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(255, 255, 255, 0.87)
  filter blur(3px)
  opacity 0
  body.comments-active &
    opacity 1

.comments-main
  perspective 800px
  padding-bottom 6rem

.comments-item
  padding 1rem  
  &-left
  &-right
    float left

  &-left
    width 5rem
  &-right
    width calc(100% - 6rem)

  will-change transform
  transform-style preserve-3d
  backface-visibility hidden
  transform translate3d(-100%, 0, 0)
  transition all 0.6s ease-in-out 0s

  body.comments-active &
    transform translate3d(0, 0, 0)

  &:nth-child(1)
    transition-delay 0s
  &:nth-child(2)
    transition-delay 0.1s
  &:nth-child(3)
    transition-delay 0.2s

.comments-user:after
    content ' '
    display table
    clear both


