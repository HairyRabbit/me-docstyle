// trigger
.aside-trigger
  position fixed
  bottom 2rem
  left 2rem
  z-index 11

.trigger
  position relative
  width 1.6rem
  height 1.6rem
  border-radius 50%
  background-color rgb(170, 170, 170)
  display inline-block
  opacity 0
  transition all 0.6s ease-in-out 0.6s

  &.init
    opacity 1

  &.active
    //transform rotate(45deg)
    //transform scale(0.5)
    &:before
    &:after
      transform scale(3)
      border-color rgba(170, 170, 170, 0)
  
  &:before
  &:after
    content ' '
    position absolute
    display inline-block
    width 100%
    height 100%
    top -1px
    left -1px
    border 1px solid rgba(170, 170, 170, 1)
    border-radius 50%

  &:before
    transition all 0.6s ease-in-out 0s
  &:after
    transition all 0.6s ease-in-out 0.2s

    
    
    
      

  
