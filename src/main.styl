typo-block-reset()
  margin  0
  padding 0
  font-size 1em
  font-weight inherit
  font-weight inherit
  line-height inherit

font-reset()
  font-family inherit
  font-size 1em
  font-weight normal
  font-style  normal
  color inherit

.typo
  font-reset()
  
  font-size 17px
  line-height 1.5
  letter-spacing 0.05em

typo-block-tag = "h1, h2, h3, h4, h5, h6, p"
  
.typo
  {typo-block-tag}
    typo-block-reset()


  h1
    display none
  h2
    margin-bottom 2em
  p
    margin-bottom 1em

  pre
    margin 1rem 0
    overflow auto




  


