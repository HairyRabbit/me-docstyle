html
body
  margin 0
  padding 0
  height 100%

body
  font-size 16px
  line-height 1
  font-family "Microsoft YaHei UI","Microsoft YaHei","Helvetica Neue","Helvetica","Arial","Hiragino Sans GB","Hiragino Sans GB W3","sans-serif"
  color #232323
  //background #f3f3f3


typo-block-reset()
  margin  0
  padding 0
  font-size 1em
  font-weight inherit
  font-weight inherit
  line-height inherit

font-reset()
  font-family inherit
  font-size 1em
  font-weight normal
  font-style  normal
  color inherit

.typo
  font-reset()
  
  font-size 17px
  line-height 1.5
  letter-spacing 0.05em

typo-block-tag = "h1, h2, h3, h4, h5, h6, p"
  
.typo
  {typo-block-tag}
    typo-block-reset()


  h1
    display none
  h2
    margin-bottom 2em
  p
    margin-bottom 1em






  


.main
  body.header-fixed &
    //padding-top 20rem

.main-frame
  height 100%
  position relative
  left 0
  right 0
  top 0
  //background-color none
  transition all 0.2s ease-in-out

  body.header-folded &
    //height 3em
    //background-color white
    //position absolute
  body.header-fixed &
    //position fixed
    //background-color white

.main-header
  display inline-block
  position absolute
  left 50%
  top 20%
  transform translate3d(-50%, 0, 0)
  transition all 0.2s ease-in-out

  body.header-folded &
    left -1rem
    top -1.5rem
    //width 4rem
    transform scale(0.5) translate3d(0, 0, 0)

.main-ctx
  display inline-block
  text-align center
  position absolute
  right 50%
  top 60%
  transform translate3d(50%, 0, 0)
  transition all 0.2s ease-in-out

  body.header-folded &
    right 1rem
    top 1rem
    transform translate3d(0%, 0, 0)

.main-title
  font-size 1.2rem
  margin-bottom 1rem  

.main-small
  font-size 80%
  color #aaa
  
  opacity 1
  body.header-folded &
    opacity 0

.main-continue
  display none
  position absolute
  left 0
  right 0
  bottom 0
  text-align center
  padding 1rem  