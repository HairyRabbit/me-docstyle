// trigger
.aside-trigger
  position fixed
  bottom 1rem
  left 1rem
  z-index 11
  width 1.6rem
  height 1.6rem

  perspective: 5rem

.trigger
  position absolute
  top 0
  left 0
  width 1.6rem
  height 1.6rem
  border-radius 50%
  background-color rgb(170, 170, 170)
  display inline-block
  will-change transform
  opacity 0
  transition all 0.6s ease-in-out 0.6s
  z-index 2

  &.init
    opacity 1

  &.active
    //transform rotate(45deg)
    //transform scale(0.5)
    &:before
    &:after
      transform scale(3)
      transform-style preserve-3d
      backface-visibility hidden
      border-color rgba(170, 170, 170, 0)
  
  &:before
  &:after
    content ' '
    position absolute
    display inline-block
    width 100%
    height 100%
    top -1px
    left -1px
    border 1px solid rgba(170, 170, 170, 1)
    border-radius 50%

  &:before
    transition all 0.6s ease-in-out 0s
  &:after
    transition all 0.6s ease-in-out 0.2s

    
.trigger-snd    
  position absolute
  top 0.3rem
  left 0.3rem
  width 1rem
  height 1rem
  background-color rgb(170, 170, 170)
  display inline-block
  z-index 1
  opacity 0
  transition opacity 0.6s ease-in-out 1s, transform 0.6s ease-in-out 0s
  transform translate3d(0, 0, 0) rotate(0deg)
  transform-style preserve-3d
