.main-small
  &:before
  &:after
    content "-"
    margin 0 0.5rem
    display inline-block
    opacity 0
    transition all 0.6s ease-in-out 0s
    transition-delay 0.6s !important

  &:before
    transform translate3d(-1rem, 0, 0)
  &:after
    transform translate3d(1rem, 0, 0)

.main-ctx.init .main-small
  &:before
  &:after
